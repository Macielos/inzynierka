<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".TownActivity" >

    <TextView
        android:id="@+id/dungeon_dialog_result_title"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="@string/battle_result"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/dungeon_dialog_result_goldFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dungeon_dialog_result_title"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dungeon_dialog_result_goldFoundLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/gold_found"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dungeon_dialog_result_goldFoundValue"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dungeon_dialog_result_experienceGained"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dungeon_dialog_result_goldFound"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dungeon_dialog_result_experienceGainedLabel"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/xp_gained"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dungeon_dialog_result_experienceGainedValue"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/dungeon_dialog_result_itemsTitle"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeon_dialog_result_experienceGained"
        android:text="@string/items_gained"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <LinearLayout
        android:id="@+id/dungeon_dialog_result_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dungeon_dialog_result_itemsTitle"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dungeon_dialog_result_item0"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_item1"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_item2"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />
    </LinearLayout>

    <TextView
        android:id="@+id/dungeon_dialog_result_playerLossesTitle"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeon_dialog_result_items"
        android:text="@string/your_losses"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/dungeon_dialog_result_playerLosses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dungeon_dialog_result_playerLossesTitle"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dungeon_dialog_result_playerLosses_unit0"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_playerLosses_unit1"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_playerLosses_unit2"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_playerLosses_unit3"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_playerLosses_unit4"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dungeon_dialog_result_playerLossesCounts"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@+id/dungeon_dialog_result_playerLosses"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dungeon_dialog_result_playerLosses_unitCount0"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_playerLosses_unitCount1"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_playerLosses_unitCount2"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_playerLosses_unitCount3"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_playerLosses_unitCount4"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />
    </LinearLayout>

    <TextView
        android:id="@+id/dungeon_dialog_result_enemyLossesTitle"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeon_dialog_result_playerLossesCounts"
        android:text="@string/enemy_losses"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/dungeon_dialog_result_enemyLosses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dungeon_dialog_result_enemyLossesTitle"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unit0"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unit1"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unit2"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unit3"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />

        <ImageView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unit4"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:src="@drawable/swordsman" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dungeon_dialog_result_enemyLossesCounts"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@+id/dungeon_dialog_result_enemyLosses"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unitCount0"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unitCount1"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unitCount2"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unitCount3"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/dungeon_dialog_result_enemyLosses_unitCount4"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:text="@string/empty" />
    </LinearLayout>

    <Button
        android:id="@+id/dungeon_dialog_result_quitButton"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dungeon_dialog_result_enemyLossesCounts"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scrollHorizontally="true"
        android:text="@string/back_to_land" />

</RelativeLayout>